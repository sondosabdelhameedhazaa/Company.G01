@model CreateEmployeeDto

@{
    var Departments = new SelectList(ViewData["departments"] as IEnumerable<Department> ?? new List<Department>(), "Id", "Name");

}
<div class="my-3">
    <label asp-for="Name" class="col-form-label"></label>
